pipeline {

        agent {
            dockerfile true
        }

    tools{
        maven 'maven'
    }

    stages{

        stage('Clone sources') {
            git( url: 'https://github.com/bhiravabhatla/shopizer.git',
                 credentialsId: 'gitcreds',
                 branch:'2.2.0')
        }

        stage('compile'){
            steps{
                sh 'mvn clean compile'
            }

        }
        stage('test'){

            steps{
                sh 'mvn clean test'
            }
            post {
                success{
                    echo 'All Tests passes successfully!!'
                }
            }
        }

        stage('build artifacts'){

            steps{
                sh 'mvn clean package'

            }
            post {
                success{
                    echo 'Now Archiving ..'
                    archiveArtifacts artifacts: 'sm-shop/target/shop.war, dockerFile'
                }
            }
        }

    }

}