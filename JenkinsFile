pipeline {

        agent any

    tools{
        maven 'maven'
    }

    stages{

        stage('Compile'){
            steps{
                sh 'mvn clean compile'
            }

        }
        stage('Test APIs'){

            steps{
                sh 'mvn clean test'
            }
            post {
                success{
                    echo 'All Tests passes successfully!!'
                }
            }
        }

        stage('Build Artifacts'){

            steps{
                sh 'mvn clean package'

            }
            post {
                success{
                    echo 'Now Archiving ..'
                    archiveArtifacts artifacts: 'sm-shop/target/shop.war, dockerFile'
                }
            }
        }

    }

}