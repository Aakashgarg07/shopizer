pipeline {

        agent any

    tools{
        maven 'maven'
        org.jenkinsci.plugins.docker.commons.tools.DockerTool 'docker'
    }

    stages{

        stage('Compile'){
            steps{
                sh 'mvn clean compile'
            }

        }
        stage('Test APIs'){

            steps{
                sh 'mvn clean test'
            }
            post {
                success{
                    echo 'All Tests passes successfully!!'
                }
            }
        }

        stage('Build Artifacts'){

            steps{
                sh 'mvn clean package'

            }
            post {
                success{
                    echo 'Now Archiving ..'
                    archiveArtifacts artifacts: 'sm-shop/target/shop.war, dockerFile'
                }
            }
          }

        stage('Build Image'){

             steps{
                        echo 'Building Image ..'
                        sh 'cd sm-shop'

                    script{
                        docker.build("shopImage:$BUILD_ID")

                    }
                }
            }
        }

    }
